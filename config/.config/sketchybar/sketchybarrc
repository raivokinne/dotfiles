# AerospaceWM & SketchyBar - High-Tech Themed

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### ğŸ›° Bar Appearance - Glassy Look #####
sketchybar --bar position=top \
           height=45 \
           corner_radius=12 \
           blur_radius=35 \
           color=0x60303030 \
           shadow=on \
           padding_left=10 \
           padding_right=10

##### ğŸ¨ Default Styling #####
default=(
  padding_left=8
  padding_right=8
  icon.font="JetBrainsMono Nerd Font:Bold:18.0"
  label.font="JetBrainsMono Nerd Font:Bold:15.0"
  icon.color=0xff00ffff
  label.color=0xffffffff
  background.color=0x60404040
  background.corner_radius=10
  background.height=28
  icon.padding_left=6
  icon.padding_right=6
  label.padding_left=6
  label.padding_right=6
  background.shadow=on
)
sketchybar --default "${default[@]}"

##### ğŸš€ AerospaceWM Workspaces - Neon Style #####
SPACE_ICONS=("ï†’" "ï†’" "ï†’" "ï†’" "ï†’" "ï†’" "ï†’" "ï†’" "ï†’" "ï†’")

for i in "${!SPACE_ICONS[@]}"
do
  sid="$(($i+1))"
  space=(
    space="$sid"
    icon="${SPACE_ICONS[i]}"
    icon.padding_left=10
    icon.padding_right=10
    background.color=0x60304040
    background.corner_radius=8
    background.height=25
    label.drawing=off
    script="$PLUGIN_DIR/update_workspace.sh"
    click_script="aerospace workspace --focus $sid"
  )
  sketchybar --add space space."$sid" left --set space."$sid" "${space[@]}"
done

##### ğŸš€ Left-Side Items - Futuristic Chevron & App Indicator #####
sketchybar --add item chevron left \
           --set chevron icon=ï” label.drawing=off icon.color=0xff00ffff \
           --add item front_app left \
           --set front_app icon.drawing=off script="$PLUGIN_DIR/front_app.sh" \
           --subscribe front_app front_app_switched

##### ğŸ”¥ Right-Side Items - Clock, Volume & Battery #####
sketchybar --add item clock right \
           --set clock update_freq=10 icon=ï™ script="$PLUGIN_DIR/clock.sh"

sketchybar --add item volume right \
           --set volume script="$PLUGIN_DIR/volume.sh" \
           --subscribe volume volume_change \
           --set volume icon=ï€¨ icon.color=0xff00ffff \
           --set volume background.color=0x60202020

sketchybar --add item battery right \
           --set battery update_freq=120 script="$PLUGIN_DIR/battery.sh" \
           --subscribe battery system_woke power_source_change \
           --set battery icon=ï‰€ icon.color=0xff00ffff \
           --set battery background.color=0x60202020

##### ğŸ¬ Subscribe to AerospaceWM Workspace Change #####
sketchybar --add event aerospace_workspace_change \
           --subscribe space.1 aerospace_workspace_change \
           --set space.1 script="$PLUGIN_DIR/update_workspace.sh"

sketchybar --update

