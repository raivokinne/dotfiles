{
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "buffer_line_height": null,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": false
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": false
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "vim_mode": true,
  "assistant": { "version": "2", "enabled": false, "button": false },
  "chat_panel": { "button": null },
  "collaboration_panel": { "button": false },
  "features": { "copilot": false, "inline_completion_provider": "none" },
  "project_panel": { "button": false },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  }
}
