include ~/.config/kitty/themes/black_metal_gorgoroth.conf

allow_remote_control yes

map super+u           set_background_opacity 1
map super+shift+u     set_background_opacity default
map super+shift+i     set_background_opacity 0.9
# font_family JetBrainsMono Nerd Font
# font_family Iosevka Nerd Font Mono
font_size 26
text_composition_strategy legacy

shell_integration no-cursor
enable_audio_bell no

dynamic_background_opacity yes
hide_window_decorations yes
window_padding_width 0
window_padding_height 0
# window_margin_width 22 0 0 0
background_blur 10
placement_strategy top

# background_opacity 0.9
set_background_opacity 1
background_opacity 1.0

# BEGIN_KITTY_FONTS
font_family      family="CPMono_v07"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

