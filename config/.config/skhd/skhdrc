# -- Changing Window Focus --
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - l : yabai -m window --focus east

# -- Changing Focus Between Displays --
ctrl + alt - s : yabai -m display --focus west
ctrl + alt - g : yabai -m display --focus east

# -- Modifying the Layout --
shift + ctrl + alt - r : yabai -m space --rotate 270
shift + ctrl + alt - y : yabai -m space --mirror y-axis
shift + ctrl + alt - x : yabai -m space --mirror x-axis

# -- Toggle Window Float (with grid layout) --
shift + ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --
shift + ctrl + alt - m : yabai -m window --toggle zoom-fullscreen
shift + ctrl + alt - e : yabai -m space --balance

# -- Moving Windows Around: Swap Windows --
shift + ctrl + alt - j : yabai -m window --swap south
shift + ctrl + alt - k : yabai -m window --swap north
shift + ctrl + alt - h : yabai -m window --swap west
shift + ctrl + alt - l : yabai -m window --swap east

# -- Moving Windows Around: Warp (move window and split) --
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# -- Move Window to Display --
shift + ctrl + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + ctrl + alt - g : yabai -m window --display east; yabai -m display --focus east;

# -- Moving Windows Between Spaces --
shift + ctrl + alt - p : yabai -m window --space prev;
shift + ctrl + alt - n : yabai -m window --space next;

# -- Move Window to a Specific Space (1 to 7) and switch focus --
shift + ctrl + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1;
shift + ctrl + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2;
shift + ctrl + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3;
shift + ctrl + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4;
shift + ctrl + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5;
shift + ctrl + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6;
shift + ctrl + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7;

# -- Starting/Stopping/Restarting Yabai --
ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai
ctrl + alt - r : brew services restart yabai

